{
    "compilerOptions": {
      "target": "ES2022",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "outDir": "../../dist/angular-mcp",
      "rootDir": ".",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "types": ["node"]
    },
    "include": ["index.ts"],
    "exclude": ["node_modules", "dist"]
  }